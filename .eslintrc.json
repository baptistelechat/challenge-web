// pnpm add --save-dev eslint eslint-config-airbnb eslint-config-airbnb-typescript eslint-config-next eslint-config-prettier eslint-plugin-prettier eslint-plugin-react @typescript-eslint/eslint-plugin @typescript-eslint/parser

{
  // Environment settings
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },

  // Extension configurations
  "extends": [
    "airbnb",
    "airbnb-typescript",
    "airbnb/hooks",
    "eslint:recommended",
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:tailwindcss/recommended",
    "prettier"
  ],

  // Parser configuration
  "parser": "@typescript-eslint/parser",

  // Parser options
  "parserOptions": {
    "project": "./tsconfig.json"
  },

  // Plugin list
  "plugins": ["@typescript-eslint", "react", "prettier"],

  // Rules configuration
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "quotes": ["error", "double"],
    "react/destructuring-assignment": "off",
    "react/function-component-definition": [
      2,
      {
        "namedComponents": "arrow-function"
      }
    ],
    "react/react-in-jsx-scope": "off",
    "react/require-default-props": "off",
    "semi": ["error", "always"]
  }
}
